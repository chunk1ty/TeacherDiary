@using TeachersDiary.Clients.Mvc.Infrastructure.Constants
@model CreateClassViewModel

@{
    Layout = LayoutConstants.Layout;
}

<div class="wrapper wrapper-content animated fadeInRight row">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <span class="col-sm-2 control-label"></span>

            <h3 class="col-sm-10">Създававе на клас</h3>
        </div>
        <div class="ibox-content">
            @using (Html.BeginForm<ClassController>(x => x.Create(), FormMethod.Post,null, new {@class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, null, new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(x => x.Name, new {@class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Select</label>

                    <div class="col-sm-10">
                        @Html.DropDownListFor(n => n.ClassTeacherId, Model.Teachers, "Изберете учител", new {@class = "form-control m-b" })
                        @Html.ValidationMessageFor(m => m.ClassTeacherId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <a class="btn btn-white" href="@(Url.Action<ClassController>(c => c.All()))">
                            Отказ
                        </a>
                        <button class="btn btn-primary" type="submit">Запиши</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
